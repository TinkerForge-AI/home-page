---
import Layout from '../components/Layout.astro';
import TeamMember from '../components/TeamMember.astro';
const team = [
  { name: "Alex Rodriguez", role: "Founder", img: "/images/alex.jpg", github: "alex", twitter: "alexai" },
  // Add more team members here
];
---
<Layout title="About | TinkerForge AI">
  <h1 class="text-3xl font-bold mb-6">About Us</h1>
  <p class="mb-8 max-w-2xl">We are a team of engineers and researchers passionate about safe, beneficial AI. Meet the team:</p>
  <div class="grid md:grid-cols-3 gap-8">
    {team.map(member => (
      <TeamMember member={member} />
    ))}
  </div>
</Layout>
