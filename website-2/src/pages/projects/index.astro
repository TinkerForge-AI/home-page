---
import Layout from '../../components/Layout.astro';
import { getCollection } from 'astro:content';
import ProjectCard from '../../components/ProjectCard.astro';
const projects = await getCollection('projects');
---
<Layout title="Projects | TinkerForge AI">
  <div class="flex flex-col items-center justify-center min-h-[80vh] py-12">
    <h1 class="text-4xl font-extrabold mb-10 tracking-tight text-center">Projects</h1>
    <div class="w-full max-w-7xl flex justify-center">
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-10 auto-rows-fr w-full">
        {projects.map(project => (
          <ProjectCard project={project} />
        ))}
      </div>
    </div>
  </div>
</Layout>
