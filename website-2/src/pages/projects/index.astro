---
import Layout from '../../components/Layout.astro';
import { getCollection } from 'astro:content';
import ProjectCard from '../../components/ProjectCard.astro';
import SupportCTA from '../../components/SupportCTA.astro';
const projects = await getCollection('projects');
---
<Layout title="Projects | TinkerForge AI">
  <div class="flex flex-col items-center justify-center min-h-[80vh] py-12 pt-24">
    <h1 class="text-5xl md:text-7xl font-bold mb-8 bg-gradient-to-r from-white via-gray-100 to-gray-300 bg-clip-text text-transparent leading-[1.15] pb-4">
      Projects
    </h1>
    <div class="w-full max-w-7xl flex justify-center">
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-10 auto-rows-fr w-full">
        {projects.map(project => (
          <ProjectCard project={project} />
        ))}
      </div>
    </div>
  </div>
  <div class="mt-16 flex justify-center">
    <SupportCTA variant="inline-project" />
  </div>
</Layout>
