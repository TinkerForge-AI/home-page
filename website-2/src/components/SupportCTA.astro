---
interface Props {
  variant?: 'default' | 'compact' | 'inline' | 'inline-project';
  showBackground?: boolean;
}

const { variant = 'default', showBackground = true } = Astro.props;
---

{variant === 'default' && (
  <section class={`py-12 ${showBackground ? 'bg-gradient-to-r from-surface-dark to-surface' : ''}`}>
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="glass rounded-2xl p-8 text-center">
        <div class="max-w-2xl mx-auto">
          <h3 class="text-2xl font-semibold mb-4 bg-gradient-to-r from-white to-gray-300 bg-clip-text text-transparent">
            Support Our Mission
          </h3>
          <p class="text-gray-400 text-lg mb-8 leading-relaxed">
            Help us advance AI safety research and build beneficial AI systems for everyone. Every contribution, big or small, makes a meaningful impact.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
            <a 
              href="/support" 
              class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-accent-600 to-primary-600 hover:from-accent-500 hover:to-primary-500 text-white rounded-lg font-medium transition-all duration-200 shadow-lg hover:shadow-xl hover:scale-105 glow-border"
            >
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
              </svg>
              Support Our Research
            </a>
            <a 
              href="/research" 
              class="inline-flex items-center px-6 py-3 border border-surface-border hover:bg-surface-card text-gray-300 hover:text-white rounded-lg font-medium transition-all duration-200"
            >
              Learn More About Our Work
              <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
)}

{variant === 'compact' && (
  <div class="glass rounded-xl p-6 text-center">
    <h3 class="text-lg font-semibold mb-3">üíù Support TinkerForge AI</h3>
    <p class="text-gray-400 text-sm mb-4">
      Help advance AI safety research with your contribution
    </p>
    <a 
      href="/support" 
      class="inline-flex items-center px-4 py-2 bg-gradient-to-r from-accent-600 to-primary-600 hover:from-accent-500 hover:to-primary-500 text-white rounded-lg text-sm font-medium transition-all duration-200 hover:scale-105"
    >
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
      </svg>
      Support Us
    </a>
  </div>
)}

{variant === 'inline' && (
  <div class="flex items-center justify-center py-8">
    <div class="flex flex-col sm:flex-row items-center gap-4 text-center">
      <p class="text-gray-400">
        üí° Enjoying our research? 
      </p>
      <a 
        href="/support" 
        class="inline-flex items-center px-4 py-2 bg-gradient-to-r from-accent-600 to-primary-600 hover:from-accent-500 hover:to-primary-500 text-white rounded-lg text-sm font-medium transition-all duration-200 hover:scale-105"
      >
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
        </svg>
        Support Our Mission
      </a>
    </div>
  </div>
)}

{variant === 'inline-project' && (
  <div class="flex items-center justify-center py-8">
    <div class="flex flex-col sm:flex-row items-center gap-4 text-center">
      <p class="text-gray-400">
        üöÄ Enjoying our projects? Support future breakthroughs!
      </p>
      <a 
        href="/support" 
        class="inline-flex items-center px-4 py-2 bg-gradient-to-r from-accent-600 to-primary-600 hover:from-accent-500 hover:to-primary-500 text-white rounded-lg text-sm font-medium transition-all duration-200 hover:scale-105"
      >
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
        </svg>
        Support Our Mission
      </a>
    </div>
  </div>
)}