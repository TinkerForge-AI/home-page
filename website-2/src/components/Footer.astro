---
const currentYear = new Date().getFullYear();
import TinkerForgeLogo from "./TinkerForgeLogo.astro";
---

<footer class="relative bg-surface-dark border-t border-surface-border">
  <!-- Background gradient -->
  <div class="absolute inset-0 bg-gradient-to-t from-surface-dark via-surface to-transparent opacity-50"></div>
  
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      
      <!-- Brand Section -->
      <div class="col-span-1 md:col-span-2">
        <div class="flex items-center space-x-3 mb-6">
          <TinkerForgeLogo size={40} class="w-10 h-10 rounded-xl" />
          <div class="text-2xl font-bold bg-gradient-to-r from-white to-gray-300 bg-clip-text text-transparent">
            TinkerForge AI
          </div>
        </div>
        <p class="text-gray-400 text-lg mb-6 max-w-md">
          Pioneering safe AI research through rigorous experimentation and open collaboration. Building the future of aligned artificial intelligence.
        </p>
        
        <!-- Social Links -->
        <div class="flex space-x-4">
          <a href="https://github.com/tinkerforge-ai" class="social-link" aria-label="GitHub">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
            </svg>
          </a>
          <a href="https://twitter.com/tinkerforge_ai" class="social-link" aria-label="Twitter">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
            </svg>
          </a>
          <a href="https://linkedin.com/company/tinkerforge-ai" class="social-link" aria-label="LinkedIn">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
          <a href="/rss.xml" class="social-link" aria-label="RSS Feed">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M6.503 20.752c0 1.794-1.456 3.248-3.251 3.248S0 22.546 0 20.752s1.456-3.248 3.252-3.248 3.251 1.454 3.251 3.248zm-6.503-12.572v4.811c6.05.062 10.96 4.966 11.022 11.009h4.817c-.062-8.71-7.118-15.758-15.839-15.82zm0-3.368c10.58.046 19.152 8.594 19.183 19.188h4.817c-.03-13.231-10.755-23.954-24-24v4.812z"/>
            </svg>
          </a>
        </div>
      </div>
      
      <!-- Research Section -->
      <div>
        <h3 class="text-white font-semibold text-lg mb-4">Research</h3>
        <ul class="space-y-3">
          <li><a href="/research" class="footer-link">Publications</a></li>
          <li><a href="/research/alignment" class="footer-link">AI Alignment</a></li>
          <li><a href="/research/safety" class="footer-link">Safety Research</a></li>
          <li><a href="/research/benchmarks" class="footer-link">Benchmarks</a></li>
        </ul>
      </div>
      
      <!-- Resources Section -->
      <div>
        <h3 class="text-white font-semibold text-lg mb-4">Resources</h3>
        <ul class="space-y-3">
          <li><a href="/blog" class="footer-link">Blog</a></li>
          <li><a href="/projects" class="footer-link">Projects</a></li>
          <li><a href="/datasets" class="footer-link">Datasets</a></li>
          <li><a href="/tools" class="footer-link">Tools</a></li>
          <li><a href="/documentation" class="footer-link">Documentation</a></li>
        </ul>
      </div>
    </div>
    
    <!-- Newsletter Signup -->
    <div class="mt-12 pt-8 border-t border-surface-border">
      <div class="max-w-md">
        <h3 class="text-white font-semibold text-lg mb-2">Stay Updated</h3>
        <p class="text-gray-400 mb-4">Get the latest research updates and insights delivered to your inbox.</p>
        <form class="flex gap-3">
          <input 
            type="email" 
            placeholder="Enter your email" 
            class="flex-1 px-4 py-2 bg-surface-light border border-surface-border rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent"
            required
          />
          <button 
            type="submit" 
            class="px-6 py-2 bg-primary-600 hover:bg-primary-500 text-white rounded-lg font-medium transition-colors duration-200 whitespace-nowrap"
          >
            Subscribe
          </button>
        </form>
      </div>
    </div>
    
    <!-- Bottom Bar -->
    <div class="mt-12 pt-8 border-t border-surface-border flex flex-col md:flex-row justify-between items-center">
      <div class="text-gray-400 text-sm mb-4 md:mb-0">
        Â© {currentYear} TinkerForge AI. All rights reserved.
      </div>
      <div class="flex space-x-6 text-sm">
        <a href="/privacy" class="footer-link">Privacy Policy</a>
        <a href="/terms" class="footer-link">Terms of Service</a>
        <a href="/security" class="footer-link">Security</a>
        <a href="/contact" class="footer-link">Contact</a>
      </div>
    </div>
  </div>
</footer>

<style>
  .social-link {
    @apply w-10 h-10 bg-surface-light hover:bg-primary-600 text-gray-400 hover:text-white rounded-lg flex items-center justify-center transition-all duration-200 hover:scale-110;
  }
  
  .footer-link {
    @apply text-gray-400 hover:text-white transition-colors duration-200;
  }
</style>
