---
const BUTTONDOWN_URL = "https://buttondown.email/api/emails/embed-subscribe/your-list";
---
<form action={BUTTONDOWN_URL} method="post" target="popupwindow" class="mt-8 flex flex-col md:flex-row gap-2" on:submit={() => window.open(BUTTONDOWN_URL, 'popupwindow')}>
  <input type="email" name="email" placeholder="Your email" required class="input px-4 py-2 rounded bg-zinc-800 text-zinc-100" />
  <button type="submit" class="btn btn-primary px-4 py-2 rounded bg-blue-600 hover:bg-blue-700 text-white">Subscribe</button>
</form>
